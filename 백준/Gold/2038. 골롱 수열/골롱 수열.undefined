#include <bits/stdc++.h>
using namespace std;

#define MAX_NUM 1000000
long long sum = 1, N;
long long dp[MAX_NUM];

int main(void) {
	cin >> N;
	dp[1] = 1;

	int idx = 2;
	while (sum < N) {
		dp[idx] = 1 + dp[idx - dp[dp[idx - 1]]];
		sum += dp[idx];
		idx++;
	}
	cout << idx - 1;
}