#include <bits/stdc++.h>
using namespace std;
int N, a, b;
int main(void) {
	cin.tie(NULL);
	ios_base::sync_with_stdio(false);
	while (1) {
		cin >> N;
		if (N == 0)
			break;
		int double_stick = 0;
		for (int i = 0; i < N; i++) {
			cin >> a >> b;
			double_stick += b / 2;
		}
		cout << double_stick / 2 << '\n';
	}
}